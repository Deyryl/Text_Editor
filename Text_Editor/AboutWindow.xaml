<Window x:Class="Text_Editor.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text_Editor"
        mc:Ignorable="d"
        Title="About" Height="150" Width="250" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="86*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">Created by Snegur I. A. О736Б</TextBlock>

        <TextBlock Grid.Row="1" HorizontalAlignment="Center"></TextBlock>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="0,15,0,0"></TextBlock>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="0,30,0,0"></TextBlock>
        <Button Grid.Row="1" Height="25" Width="50" Margin="0, 40, 0, 0" Click="Button_Click">Go back</Button>
    </Grid>
</Window>
